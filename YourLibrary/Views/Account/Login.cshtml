@using YourLibrary.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<h1>Log in</h1>

<div class="container">
    <main>
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form method="post" asp-action="Login" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>